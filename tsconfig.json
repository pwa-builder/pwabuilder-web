{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "outDir": "build"
  },
  "lib": ["es2018"],
  "include": [
    "src/**/*", "src/index.d.ts", "assets/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}